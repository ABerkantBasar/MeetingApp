@model UserInfo
@{
ViewBag.Title = "Toplantı Başvuru";
}
<h1 class="h4">Toplantı Adı</h1>
<p>Toplantı Detayı</p>
<p>Toplantıya Katılan Kişi Sayısı: @ViewBag.UserCount</p>

<form method="post" action="/Meeting/Apply" novalidate>
    <div asp-validation-summary="All"></div>
    <div class="mb3">

        <label asp-for="Name" class="form-label">İsim</label>
        <input asp-for="Name" class="form-control">

    </div>
    <div class="mb-3">

        <label asp-for="Phone" class="form-label">Telefon Numarası</label>
        <input asp-for="Phone" class="form-control">

    </div>
    <div class="mb-3">

        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control">

    </div>
    <div class="mb-3">

        <label asp-for="WillAttend" class="form-label">Katılma Durumu</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="">Seçiniz</option>
            <option value="true">Evet</option>
            <option value="false">Hayır</option>
        </select>

    </div>
    <button type="submit">Kaydet</button>
</form>