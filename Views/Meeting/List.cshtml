@model List<UserInfo>
    @{
    ViewBag.Title = "Katılımcı Listesi";
    }
    <h1 class="h4">Toplantı Adı</h1>
    <p>Toplantı Detayı</p>


    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım Durumu</td>
                <td>Detay</td>
            </tr>
        </thead>
        <tbody>
            @{int i=0;}
            @foreach(var user in Model){
            var durum=user.WillAttend==true?"Evet":"Hayır";
            var className = user.WillAttend==true?"table-success":"table-danger";
            if(user.WillAttend==true){
            i++;
            }
            <tr class="@className">
                <td>@user.Name</td>
                <td>@durum</td>
                <td><a class="btn btn-sm btn-primary" href=/meeting/details/@user.Id>Deytay1</a></td>
            </tr>
            }

        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <p>Toplantıya Katılan Kişi Sayısı: @i</p>
        </div>
    </div>